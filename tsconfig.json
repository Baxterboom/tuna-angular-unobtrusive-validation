{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "./src",
    "outFile": "tuna-jsval.js",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": true,
    "sourceMap": false,
    "target": "es5",
    "declaration": true
  },
  "include": [
    "src/**/*.ts",
    "bower_components/**/*.d.ts"
  ],
  "exclude": [
    "**/*-test.ts",
    "dist",
    "demo",
    "tests",
    "node_modules",
    "bower_components"
  ]
}
